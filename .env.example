# Production Environment Variables for Keycloak Skill-Wanderer
# Copy this file to .env and update the values for your environment

# Keycloak Configuration
KC_HOSTNAME=localhost
KC_HOSTNAME_PORT=8080
KC_HTTP_ENABLED=true
KC_HOSTNAME_STRICT_HTTPS=false
KC_LOG_LEVEL=INFO
KEYCLOAK_PORT=8080

# Admin Credentials (CHANGE THESE IN PRODUCTION!)
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=your_secure_admin_password_here

# Database Configuration
POSTGRES_PASSWORD=your_secure_db_password_here
POSTGRES_PORT=5432

# Optional: SSL Configuration (uncomment and configure for HTTPS)
# KC_HTTPS_CERTIFICATE_FILE=/opt/keycloak/conf/server.crt
# KC_HTTPS_CERTIFICATE_KEY_FILE=/opt/keycloak/conf/server.key
# KC_HOSTNAME_STRICT_HTTPS=true
# KC_HTTP_ENABLED=false

# Optional: Custom JVM Options
# JAVA_OPTS_APPEND="-Djava.awt.headless=true -Xms1024m -Xmx4096m"
